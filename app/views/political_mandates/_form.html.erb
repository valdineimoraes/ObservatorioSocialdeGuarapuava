<%= simple_form_for(@political_mandate) do |f| %>
  <div class="form-row">
    <div class="col-sm-5">
      <%= f.input :first_period, as: :date, include_blank: true, start_year: 2000, end_year: Date.current.year + 20 %>
    </div>
    <div class="col-sm-5">
      <%= f.input :final_period, as: :date, include_blank: true , start_year: 2000, end_year: Date.current.year + 20 %>
    </div>
    <div class="col-sm-12">
      <%= f.input :description, input_html: {class: 'markdown-editor'} %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Voltar', political_mandates_path, class:"btn btn-warning" %>
  </div>
<% end %>
