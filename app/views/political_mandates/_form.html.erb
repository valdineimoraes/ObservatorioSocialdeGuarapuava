<%= simple_form_for(@political_mandate) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="row form-inputs">
    <div class="col-sm-6 col-md-8">
      <%= f.input :description %>
      <%= f.input :first_period, as: :date, include_blank: true %>
      <%= f.input :final_period, as: :date, include_blank: true %>
    </div>
  </div>
  <br>
  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Voltar', political_mandates_path, class:"btn btn-warning" %>
  </div>
<% end %>
