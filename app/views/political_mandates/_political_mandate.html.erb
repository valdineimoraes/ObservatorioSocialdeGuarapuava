<tr>
  <td><%= political_mandate.id %></td>
  <td><%= political_mandate.description %></td>
  <td><%= political_mandate.first_period %></td>
  <td><%= political_mandate.final_period %></td>
  <td><%= political_mandate.councilmen.size %></td>

  <!--Ações dos Botões -->
  <td><%= link_to '', export_political_mandate_path(political_mandate), target: "_blank",
                  class: "fa fa-file-pdf btn btn-success" ,
                  title: "Gerar Relatório em PDF do Mandato Político"%></td>
  <td><%= link_to '', political_mandate,
                  class: "fa fa-search btn btn-info" , title: "Visualizar Mandato"%></td>
  <td><%= link_to '', edit_political_mandate_path(political_mandate),
                  class: "fa fa-edit btn btn-warning", title: "Editar Mandato" %></td>
  <td><%= link_to '', political_mandate, method: :delete, data: { confirm: 'Tem certeza?' },
                  class: "fa fa-remove btn btn-danger", title: "Excluir Mandato" %></td>
</tr>