<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->

  <section class="sidebar">
    <!-- Sidebar Menu -->
    <ul class="sidebar-menu" data-widget="tree">
      <li class="header">CADASTROS</li>

      <li class="sidebar-item">
        <!-- Mostra o Link para a Dashboard do Sistema -->
        <%= link_to root_path do %>
          <i class="fa fa-home fa-fw "></i>
          <span>Inicio</span>
        <% end%>
      </li>
      <!-- Mostra o Link para os Mandatos Politicos-->
      <li class="sidebar-item">
        <%= link_to political_mandates_path do %>
          <i class="fa fa-list "></i>
          <span>Mandatos Políticos</span>
        <% end%>
      </li>
      <!-- Mostra o Link para as Sessões -->
      <li class="sidebar-item">
        <%= link_to meetings_path do %>
          <i class="fa fa-users "></i>
          <span>Sessões</span>
        <% end%>
      </li>
      <!-- Mostra o Link para os vereadores -->
      <li class="sidebar-item">
        <%= link_to councilmen_path do %>
          <i class="fa fa-user-plus "></i>
          <span>Vereadores</span>
        <% end%>
      </li>
      <!-- Mostra o Link para as Tipos de Projetos-->
      <li class="sidebar-item">
        <%= link_to project_kinds_path do %>
          <i class="fa fa-pie-chart "></i>
          <span>Tipos de Projeto</span>
        <% end%>
      </li>
      <!-- Mostra o Link para os Projetos ou Pautas -->
      <li class="sidebar-item">
        <%= link_to projects_path do %>
          <i class="fa fa-file "></i>
          <span>Projetos/Pautas</span>
        <% end%>
      </li>
      <li class="header">CONFIG DA CONTA</li>
      <li>
        <%= link_to edit_user_registration_path do%>
          <i class="fa fa-fw fa-user "></i>
          <span>Perfil</span>
        <% end%>
      </li>
    </ul>
    <!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
