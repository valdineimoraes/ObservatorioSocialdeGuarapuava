<div class="box box-info">
  <div class="container">
    <div class="box-header">
      <h2>Atualização de Votos</h2>
      <h3>Projeto: <%= @project.name%></h3>
    </div>
    <div class="box-body  table-responsive">
      <%= simple_form_for @project, url: project_votes_path do |p| %>
        <table class="table table-bordered table-striped">
          <thead class="">
            <tr>
              <th>Vereador</th>
              <th>Voto</th>

            </tr>
          </thead>
          <tbody>
            <%= p.simple_fields_for :votes do |v| %>
              <tr>
                <td><%= v.object.councilman.name %></td>
                
                <td><%= v.input_field :vote, collection: Vote.vote_for_select, prompt: "Informe o Voto"%></td>

              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <%= p.button :submit %>
        <%= link_to 'Voltar', projects_path, class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>

