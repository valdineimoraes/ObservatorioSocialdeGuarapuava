<% breadcrumb :show_councilman, @councilman %>

<div class="box box-primary">
  <div class="box-body box-profile">

    <div class="row">
      <div class="col-sm-4">
        <% if @councilman.avatar? %>
        <%= image_tag(@councilman.avatar.big.url, class:"profile-user-img img-vereador img-responsive img-circle") %>
        <%else%>
          <%= gravatar_for(@councilman, 200, "profile-user-img img-responsive img-circle")%>
        <%end%>
      </div>
      <div class="col-sm-4">
        <h3 class="profile-username text-center"><%= @councilman.nickname %></h3>
        <p class="text-muted text-center"><%= @councilman.name %></p>
      </div>
    </div>
    <br>
    

        
        <ul class="list-group list-group-unbordered">
          <li class="list-group-item">
            <b>Sessões que participou</b> <a class="pull-right"><%=@councilman.meetings.size%></a>
          </li>
          <li class="list-group-item">
            <b>Projetos que apresentou</b> <a class="pull-right"><%=@councilman.projects.size%></a>
          </li>
          <li class="list-group-item">
            <b>Partido</b> <a class="pull-right"><%=@councilman.political_party%></a>
          </li>
          <li class="list-group-item">
            <b>Posição política</b> <a class="pull-right"><%= I18n.t(@councilman.political_position, scope: [:activerecord, :attributes, :councilman, :political_positions])
%></a>
          </li>
          
        </ul>
        <a href="#" class="btn btn-primary btn-block"><b>Votos</b></a>
  </div>            <!-- /.box-body -->
</div>
